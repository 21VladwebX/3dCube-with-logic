body
  height: 800px;
  perspective: 1000px;
  perspective-origin: center -5em;
  display: flex;
  justify-content: center;
  align-items: center;
  
 .container
	transform-style: preserve-3d;
	// border: 2px dotted silver;
	
	height:10em;
	width: 10em;
	transition: all 3s;
	animation: rotate 20s infinite linear;
@keyframes rotate {
	// 0%{
	// 	transform: rotateY(0) rotateX(0);
	// }
	// 25%{
	// 	transform: rotateY(deg) rotateX(15%);	
	// }
	// 50%{
	// 	transform: rotateY(50%) rotateX(45%);
	// }
	// 75%{
	// 	transform: rotateY(75%) rotateX(75%);
	// }
	100%{
		transform: rotateY(360deg);
	}
}
.side 
	position: absolute;
	width: 10em;
	height: 10em;
	border: 1px solid orange;
	opacity: 1.1;
	// backface-visibility: hidden;
	transition: all .3s ;
	
	:hover
		opacity: .5;
		transform: scale(.5);
		
	img
		width: 100%;
		height: 100%;
		transition: all .3s ;	
		

	
.back
	transform: translateZ(-5em) translateY(15em);
	// background-color: yellow;
.left
	transform: translateX(-5em) translateY(10em) rotateY(90deg);
	// background-color: red;
.right
	transform: translateX(5em) translateY(5em) rotateY(-90deg);
	// background-color: blue;
.top
	transform: translateY(-5em) rotateX(90deg);
	// background-color: green;
.bottom
	transform: translateY(5em) rotateX(-90deg);
	// background-color: brown;
.front
	transform: translateZ(5em);
	// background-color: #14aaa8;
		
.small
	width: 80px;
	height: 80px;
	&-img img
		position: absolute;
		// width: 80%;
		// height: 80%;
		width: 80px;
		height: 80px;
	&-back__side1
		transform: translateZ(-2em) translateY(13em) translateX(3em);
	&-left__side2
		transform: translateX(.5em)  translateZ(.2em) translateY(8em) rotateY(90deg);
	&-right__side3
		transform: translateX(1em) rotateY(-90deg);
	&-top__side4
		transform: translateY(-1em) rotateX(90deg);
	&-bottom__side5
		transform: translateY(1em) rotateX(-90deg);
	&-front__side6
		transform: translateZ(1em);